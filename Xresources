!! By default, XTerm composes special chars with META. With this setting I can work my readline magic instead.
XTerm*metaSendsEscape: true

XTerm*VT100.translations: #override \
<Btn1Up>: select-end(PRIMARY, CLIPBOARD, CUT_BUFFER0)\n\
Ctrl <Key>y: insert-selection(CLIPBOARD)


!! XTerm*VT100.translations: #override \
!! Ctrl <Key>n: scroll-forw(1,line) \n\
!! Ctrl <Key>p: scroll-back(1,line) \n\
!! Ctrl <Key>v: scroll-forw(1,page) \n\
!! Alt <Key>v: scroll-back(1,page)


